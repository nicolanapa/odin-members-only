<% if (locals.messages) { %>

<ul class="messages-container">
    <% for (let i = 0; i < messages.length; i++) { %>
    <li class="message">
        <% if (locals.user) { %> <% if (locals.user.membership_status === "member" ||
        locals.user.admin === true) { %>
        <div class="message-info">
            <div>
                <img src="../icons/usernameIcon.svg" alt="Username" width="40px" height="auto" />
                <p><%= messages[i].email %></p>
            </div>

            <div>
                <img
                    src="../icons/calendarDateIcon.svg"
                    alt="Day/Month/Year"
                    width="40px"
                    height="auto"
                />
                <p><%= (messages[i].posted_date).substring(0, 10) %></p>
            </div>

            <div>
                <img
                    src="../icons/exactDateIcon.svg"
                    alt="Hour:Minutes:Seconds and Time Zone"
                    width="40px"
                    height="auto"
                />
                <p><%= (messages[i].posted_date).substring(11) %></p>
            </div>
        </div>
        <% } else { %>
        <%- include("./anonymousMessageInfo") %>
        <% } %>

        <% } else { %>
        <%- include("./anonymousMessageInfo") %>
        <% } %>

        <h3 class="message-title"><%= messages[i].title %></h3>
        <p class="message-content"><%= messages[i].content %></p>

        <% if (locals.user) { %>
        <% if (locals.user.admin === "true") { %>
        <form action="/delete/<%= messages[i].id %>" method="post" class="delete-form">
            <button type="submit" class="delete-button">Delete this Message</button>
        </form>
        <% } %>
        <% } %>
    </li>
    <% } %>
</ul>

<% } else { %>
<h2>No messages found.</h2>
<% } %>
